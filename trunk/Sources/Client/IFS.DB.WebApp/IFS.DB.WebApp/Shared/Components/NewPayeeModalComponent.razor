<div class="modal-layout" id="ModalNewPayee">
    <div class="modal-scroll">
        <div class="modal-background" onclick="onTriggerModalNewPayee()"></div>
        <div class="payments-modal-layout">
            <div class="payments-modal">
                <div class="payments-modal-header-wrapper">
                    <div class="payments-modal-header">
                        <p class="payments-modal-header__title">Create new Payee</p>
                        <div class="payments-modal-header__icon" onclick="onTriggerModalNewPayee()">
                            <img class="icon" src="/img/icons/closeIcon.svg" alt="close" />
                            <img class="iconHover" src="/img/icons/closeIconHover.svg" alt="close" />
                        </div>
                    </div>
                </div>

                <div class="payments-modal-main">
                    <div class="payments-modal-main-input">
                        <label>Template reference</label>
                        <input placeholder="Enter here" class="input" />
                        <p class="payments-new-payee-selector__text">Please select an account to credit.</p>
                    </div>

                    <div class="payments-modal-main-form">
                        <div class="formgroup">
                            <label>Debit account</label>
                            <div class="select-layout">
                                <select class="select">
                                    <option selected>Select an account</option>
                                    <option>Account 1</option>
                                    <option>Account 2</option>
                                </select>
                            </div>
                        </div>

                        <div class="formgroup">
                            <label>Payment type</label>
                            <div class="select-layout">
                                <select class="select">
                                    <option selected>Select a type</option>
                                    <option>Domestic</option>
                                    <option>SWIFT</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="payments-modal-main-form">
                        <p class="payments-modal-main-form__title">Payment information</p>
                    </div>

                    <div class="payments-modal-main-form">
                        <div class="formgroup">
                            <label>Account name</label>
                            <input placeholder="Enter here" class="input" />
                        </div>

                        <div class="formgroup">
                            <label>Account No.</label>
                            <input placeholder="Enter here" class="input" />
                        </div>
                    </div>

                    <div class="payments-modal-main-form">
                        <div class="formgroup">
                            <label>Payment reference</label>
                            <input placeholder="Enter here" class="input" />
                        </div>

                        <div class="formgroup">
                            <label>Sort code</label>
                            <input placeholder="_ _ _" class="input" />
                        </div>

                        <div class="formgroup">
                            <label>Currency</label>
                            <div class="select-layout">
                                <select class="select">
                                    <option selected>Select a currency</option>
                                    <option>USD</option>
                                    <option>EUR</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="payments-modal-main-input">
                        <label>Statement narrative</label>
                        <input placeholder="Enter here" class="input" />
                    </div>
                </div>

                <div class="payments-modal-footer">
                    <button class="payments-modal-footer__buttonCancel" onclick="onTriggerModalNewPayee()">Cancel</button>
                    <button class="payments-modal-footer__buttonSuccess" onclick="onSuccessModalNewPayee()">Save and apply Payee</button>
                </div>
            </div>
        </div>
    </div>
</div>