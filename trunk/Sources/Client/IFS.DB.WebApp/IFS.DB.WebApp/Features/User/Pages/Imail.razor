@layout BasicLayout
@page "/imail"

<div class="imail-layout">
    <div class="imail-container">
        <div class="imail">
            <div class="imail-header">
                <div class="imail-header-wrapper">
                    <img src="/img/imail/imail.svg" alt="logo" class="imail-header__logo" />
                    <p class="imail-header__title">iMail</p>
                    <img src="/img/icons/tooltipIcon.svg" alt="tooltip" class="imail-header__tooltip-icon" />
                </div>
            </div>

            <div class="imail-section">
                <ImailMainComponent></ImailMainComponent>
                <ImailSidebarComponent></ImailSidebarComponent>
            </div>
        </div>
    </div>
</div>
