<div class="imail-main">
    <div class="imail-main-tabs">
        @foreach (IMailTabPageComponent tabPage in TabPages)
        {
            <button type="button" class="imail-main-tabs__item @GetButtonClass(tabPage)" @onclick=@(() => ActivatePage(tabPage))>
                <img src="@tabPage.TabPageHeaderIcon" alt="inbox" class="imail-main-tabs__item-icon" />
                @tabPage.Text
            </button>
        }
    </div>

    <div class="imail-messages">
        <CascadingValue Value="this">
            @ChildContent
        </CascadingValue>
    </div>
</div>