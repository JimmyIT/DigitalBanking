<div class="modal-layout" id="ModalSuccess">
    <div class="modal-scroll">
        <div class="modal-background" onclick="onTriggerModalSuccess()"></div>
        <div class="payments-modal-layout">
            <div class="payments-modal">
                <div class="payments-modal-header-wrapper">
                    <div class="payments-modal-header">
                        <p class="payments-modal-header__title">Payment was confirmed</p>
                        <div class="payments-modal-header__icon" onclick="onTriggerModalSuccess()">
                            <img class="icon" src="/img/icons/closeIcon.svg" alt="close" />
                            <img class="iconHover" src="/img/icons/closeIconHover.svg" alt="close" />
                        </div>
                    </div>
                    <p class="payments-modal-header__subtitle">We let you know once your Payee will get the money</p>
                </div>

                <div class="payments-modal-main">
                    <div class="payments-modal-main-info-card">
                        <div class="payments-modal-main-info-card-content">
                            <div class="payments-modal-main-info-card-content-item">
                                <p class="payments-modal-main-info-card-content-item__title">Pay to</p>
                                <p class="payments-modal-main-info-card-content-item__text">[Payee reference 1]</p>
                            </div>
                            <div class="payments-modal-main-info-card-content-item">
                                <p class="payments-modal-main-info-card-content-item__title">Payment type</p>
                                <p class="payments-modal-main-info-card-content-item__text">Domestic</p>
                            </div>
                            <div class="payments-modal-main-info-card-content-item">
                                <p class="payments-modal-main-info-card-content-item__title">Payment Method</p>
                                <p class="payments-modal-main-info-card-content-item__text">BASK</p>
                            </div>
                        </div>

                        <div class="payments-modal-main-info-card-content">
                            <div class="payments-modal-main-info-card-content-item">
                                <p class="payments-modal-main-info-card-content-item__title">From account</p>
                                <p class="payments-modal-main-info-card-content-item__text">Account No.: 00256001</p>
                            </div>
                            <div class="payments-modal-main-info-card-content-item">
                                <p class="payments-modal-main-info-card-content-item__title">Credit amount</p>
                                <p class="payments-modal-main-info-card-content-item__text">1000.00</p>
                            </div>
                            <div class="payments-modal-main-info-card-content-item">
                                <p class="payments-modal-main-info-card-content-item__title">Payment date</p>
                                <p class="payments-modal-main-info-card-content-item__text">12/12/2021</p>
                            </div>
                        </div>

                        <div class="payments-modal-main-info-card-content">
                            <div class="payments-modal-main-info-card-content-item">
                                <p class="payments-modal-main-info-card-content-item__title">Payment Reference</p>
                                <p class="payments-modal-main-info-card-content-item__text">Payment Reference text the user should write here</p>
                            </div>
                            <div class="payments-modal-main-info-card-content-item">
                                <p class="payments-modal-main-info-card-content-item__title">Payment Narrative</p>
                                <p class="payments-modal-main-info-card-content-item__text">Debit Narrative text the user should write here</p>
                            </div>
                            <div class="payments-modal-main-info-card-content-item">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="payments-modal-footer">
                    <button class="payments-modal-footer__buttonSuccess" onclick="onTriggerModalSuccess()">Ok</button>
                </div>
            </div>
        </div>
    </div>
</div>