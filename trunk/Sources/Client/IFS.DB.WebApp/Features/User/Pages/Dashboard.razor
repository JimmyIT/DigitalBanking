@layout UserLayout
@page "/user/dashboard"

<div class="home-layout">
    <div class="home-container">
        <div class="home">
            <CardInfoComponent OnSelectedCardChange=@SelectedCardChange
                               OnSetFavouriteAccountChange=@SetFavouriteAccountChange></CardInfoComponent>
            <br />

            <p class="home-title">Account No. @_accountModel.AccountNumber - @_accountModel.CurrencyCode</p>

            <div class="home-main">
                <div class="home-main__left">
                    <UpcomingTransactionsComponent IsPagination=@true IsCustomPager=@true AccountNumber="@_accountModel.AccountNumber"></UpcomingTransactionsComponent>
                    <RecentTransactionsComponent IsPagination=@true IsCustomPager=@true AccountNumber="@_accountModel.AccountNumber"></RecentTransactionsComponent>
                </div>

                <div class="home-main__right">
                    <TransferToAccountComponent></TransferToAccountComponent>

                    <DashboardPaymentComponent></DashboardPaymentComponent>

                    <DashboardImailComponent></DashboardImailComponent>
                </div>
            </div>
        </div>
    </div>
</div>
