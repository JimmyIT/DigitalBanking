<div class="modal-layout" id="ModalConfirm">
    <div class="modal-scroll">
        <div class="modal-background" @onclick=@Cancel></div>
        <div class="confirm-modal-layout">
            <div class="confirm-modal">
                <div class="confirm-modal-header-wrapper">
                    <div class="confirm-modal-header">
                        <p class="confirm-modal-header__title">Would you like to confirm locking for @UserInfoModel.UserName?</p>
                        <img class="confirm-modal-header__icon" src="/img/icons/closeIcon.svg" alt="close" @onclick=@Cancel/>
                    </div>
                    <p class="confirm-modal-header__subtitle">Administrator 1 has offered to Lock profile. You need to Confirm or Reject this action.</p>
                </div>

                <div class="confirm-modal-main">
                    <div class="confirm-modal-main-item">
                        <p class="confirm-modal-main-item-title">User name:</p>
                        <p class="confirm-modal-main-item-subtitle">@UserInfoModel.UserName</p>
                    </div>
                    <div class="confirm-modal-main-item">
                        <p class="confirm-modal-main-item-title">Profile status:</p>
                        <p class="confirm-modal-main-item-subtitle">@UserInfoModel.ActionStatus.GetValueOrDefault().ToDescription()</p>
                    </div>
                    <div class="confirm-modal-main-item">
                        <p class="confirm-modal-main-item-title">Lock reason:</p>
                        <p class="confirm-modal-main-item-subtitle">Fired from the company</p>
                    </div>
                </div>

                <div class="confirm-modal-footer">
                    <button class="confirm-modal-footer__buttonCancel" @onclick=@Cancel>Cancel</button>
                    <button class="confirm-modal-footer__buttonConfirm" @onclick=@OnLockUser>Confirm</button>
                </div>
            </div>
        </div>
    </div>
</div>